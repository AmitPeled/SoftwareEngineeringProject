<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1">

   <children>
      <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Menu">
         <font>
            <Font size="32.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Text>
      <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#onSearchButton" prefHeight="25.0" prefWidth="150.0" text="Search">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Button>
      <Button fx:id="addanewcityBtn" mnemonicParsing="false" onAction="#onAddNewCityButton" prefWidth="150.0" text="Add a new city">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Button>
      <Button fx:id="reportsBtn" mnemonicParsing="false" onAction="#onReportsButton" prefHeight="25.0" prefWidth="150.0" text="Reports">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Button>
      <Button fx:id="approvalReportsBtn" mnemonicParsing="false" onAction="#onApprovalRequestsButton" prefHeight="25.0" prefWidth="150.0" text="Approval Requests">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Button>
      <Button fx:id="customerreportbtn" mnemonicParsing="false" onAction="#onCustomerReportButton" prefHeight="25.0" prefWidth="150.0" text="Customer Report">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#onLogoutButton" prefHeight="25.0" prefWidth="150.0" text="Logout">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Button>
   </children>
</VBox>
