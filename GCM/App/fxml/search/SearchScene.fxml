<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="785.0" prefWidth="526.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Group fx:id="SearchArea">
         <children>
            <RadioButton fx:id="rCityname" layoutX="189.0" layoutY="141.0" mnemonicParsing="false" selected="true" text="City name">
               <toggleGroup>
                  <ToggleGroup fx:id="searchOptions" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="rDescription" layoutX="189.0" layoutY="193.0" mnemonicParsing="false" text="Description">
               <toggleGroup>
                  <ToggleGroup fx:id="options" />
               </toggleGroup></RadioButton>
            <TextField fx:id="searchBar" layoutX="180.0" layoutY="75.0" onAction="#searchListener" prefHeight="25.0" prefWidth="157.0" />
            <Text fx:id="subtitle" layoutX="189.0" layoutY="131.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Search by:" underline="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <RadioButton fx:id="rPointofinterest" layoutX="189.0" layoutY="167.0" mnemonicParsing="false" text="Point of interest" toggleGroup="$options" />
            <Text fx:id="title" layoutX="210.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Search" wrappingWidth="106.0">
               <font>
                  <Font size="33.0" />
               </font>
            </Text>
         </children>
      </Group>
      <Group />
      <Button fx:id="addNewMapBtn" layoutX="138.0" layoutY="286.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="242.0" text="Add a new map to current city" visible="false" />
      <Button fx:id="buySubscriptionBtn" layoutX="138.0" layoutY="286.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="242.0" text="Buy subscription" visible="false" />
   	<ListView fx:id="listView" layoutX="54.0" layoutY="304.0" prefHeight="444.0" prefWidth="435.0" />
      <Button fx:id="backBtn" layoutX="103.0" layoutY="222.0" mnemonicParsing="false" onAction="#onBack" prefHeight="35.0" prefWidth="149.0" text="Back" />
      <Button fx:id="searchBtn" layoutX="283.0" layoutY="221.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="149.0" text="Search" />
   </children>
</AnchorPane>
