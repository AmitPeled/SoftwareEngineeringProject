<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="usernametxt" promptText="Username" />
      <PasswordField fx:id="passwordtxt" promptText="Password" />
      <Button fx:id="loginbtn" mnemonicParsing="false" onAction="#LogIn" text="Log In" />
      <Label fx:id="wornglbl" text="user name or password  are incorrect" textFill="RED" visible="false" />
      <Label fx:id="logedinlabel" text="This user is already loged in from other device" textFill="RED" visible="false" />
      <Button fx:id="Fpasswordbtn" mnemonicParsing="false" onAction="#forgotPassword" text="Forgot password" />
      <Button mnemonicParsing="false" onAction="#forgotUsername" text="Forgot Username" />
      <Button fx:id="registerbtn" mnemonicParsing="false" onAction="#register" text="Register" />
      <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onBackButton" text="Back" />
   </children>
   <padding>
      <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
