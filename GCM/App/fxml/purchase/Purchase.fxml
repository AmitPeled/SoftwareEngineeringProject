<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="purchase" />
      <TextField fx:id="cardnumtxt" promptText="card number" />
      <TextField fx:id="cvvtxt" promptText="cvv" />
      <AnchorPane>
         <children>
            <Label layoutX="6.0" layoutY="5.0" text="expire date:" />
            <ComboBox fx:id="mounthPicker" layoutX="128.0" layoutY="1.0" prefWidth="70.0" />
            <ComboBox fx:id="yearPicker" layoutX="233.0" layoutY="1.0" prefWidth="70.0" />
            <Label layoutX="92.0" layoutY="5.0" text="Month" />
            <Label layoutX="209.0" layoutY="5.0" text="Year" />
         </children>
      </AnchorPane>
      <HBox spacing="5.0">
         <children>
            <TextField fx:id="nametxt" promptText="name" />
            <TextField fx:id="lastnametxt" promptText="lastname" />
         </children>
      </HBox>
      <AnchorPane>
         <children>
            <Button layoutX="231.0" layoutY="14.0" mnemonicParsing="false" text="purchase" />
            <Button fx:id="backBtn" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />
         </children>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
